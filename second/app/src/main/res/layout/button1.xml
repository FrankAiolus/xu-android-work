<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jas.two.button1"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/button1_1"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:text="水平布局"
        android:onClick="clickone_one"
        android:layout_marginStart="48dp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="90dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="48dp" />

    <Button
        android:id="@+id/button1_2"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:text="垂直布局"
        android:onClick="clickone_two"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/button1_3"
        app:layout_constraintRight_toRightOf="@+id/button1_3"
        android:layout_marginTop="68dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="68dp"
        app:layout_constraintLeft_toLeftOf="@+id/button1_1"
        app:layout_constraintTop_toTopOf="@+id/button1_1"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp" />

    <Button
        android:id="@+id/button1_3"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:text="向左对齐"
        android:onClick="clickone_three"
        android:layout_marginEnd="46dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="46dp" />

    <Button
        android:id="@+id/button1_4"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="返回"
        android:onClick="clickone_four"
        android:layout_marginStart="6dp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="6dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="3dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp" />

</android.support.constraint.ConstraintLayout>
