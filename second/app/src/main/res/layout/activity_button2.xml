<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jas.two.button2">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/button2_5"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp">

        <Button
            android:id="@+id/button2_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第一个button"
            android:layout_marginTop="90dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/button2_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第二个button"
            android:layout_alignBaseline="@+id/button2_1"
            android:layout_alignBottom="@+id/button2_1"
            android:layout_toRightOf="@+id/button2_1"
            android:layout_toEndOf="@+id/button2_1" />

        <Button
            android:id="@+id/button2_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第三个button"
            android:layout_below="@+id/button2_1"
            android:layout_marginTop="60dp" />

        <Button
            android:id="@+id/button2_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第四个button"
            android:layout_alignBaseline="@+id/button2_3"
            android:layout_alignBottom="@+id/button2_3"
            android:layout_alignLeft="@+id/button2_2"
            android:layout_alignStart="@+id/button2_2"
            android:layout_below="@+id/button2_2"/>
    </RelativeLayout>

    <Button
        android:id="@+id/button2_5"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="返回"
        android:onClick="clicktwo_five"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="6dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp" />

</android.support.constraint.ConstraintLayout>
