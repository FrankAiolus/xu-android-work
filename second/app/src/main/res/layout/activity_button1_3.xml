<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jas.two.button1_3">

    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:weightSum="3"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginTop="110dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp">

        <Button
            android:id="@+id/button1_3_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="水平布局"
            android:onClick="clickone_three_one"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/button1_3_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="垂直布局"
            android:onClick="clickone_three_two"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/button1_3_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="向左对齐"
            android:layout_weight="1"/>
    </LinearLayout>

    <Button
        android:id="@+id/button1_3_4"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="返回"
        android:onClick="clickone_three_four"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="3dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp" />

</android.support.constraint.ConstraintLayout>
